{% extends 'layout.html.twig' %}
{% set active = 'homepage' %}

{% block content %}
    <h1>Configured frontends:</h1>
    <ul>
        {% for frontend in frontends %}
            <li>
                {{ frontend.name }}
                (<a href="{{ frontend.base_url}}">{{ frontend.base_url }}</a>)
                <a href="{{ path('remove_frontend', {'id': frontend.id}) }}">
                    <i class="icon-trash"></i>
                </a>
                <br />
                API key: {{ frontend.apikey }}
            </li>
        {% else %}
            <li>{{ 'No frontend linked yet'|trans }}</li>
        {% endfor %}
    </ul>
{% endblock %}
